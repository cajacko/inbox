{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "no-console": false,
    "member-ordering": false,
    "curly": false,
    "jsx-boolean-value": false,
    "redux-container-types": true
  },
  "rulesDirectory": "packages/tslint",
  "linterOptions": {
    "exclude": [
      "*.json",
      "**/*.json",
      "**/*.d.ts",
      "**/node_modules/**/*",
      "dist/**/*",
      "build/**/*",
      "config/**/*.js",
      "coverage/lcov-report/*.js"
    ]
  }
}
